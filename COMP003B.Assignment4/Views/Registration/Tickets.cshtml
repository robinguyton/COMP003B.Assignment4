@model COMP003B.Assignment4.RegisterModel
﻿

@{ ViewData["Title"] = "Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<h2>@ViewData["Tickets"]</h2>


<form asp-action="Register" method="post">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Tickets"></label>
        <input asp-for="Tickets" type="number" class="form-control" />
        <span asp-validation-for="Tickets" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CreditCard"></label>
        <input asp-for="CreditCard" type="number" class="form-control" />
        <span asp-validation-for="CreditCard" class="text-danger"></span>
    </div>

        <button type="submit" class="btn btn-primary">Submit</button>
</form>



@model COMP003B.Assignment4.RegisterModel


@{ ViewData["Title"] = "FanClub";
    Layout = "~/Views/Shared/_Layout.cshtml";}


<h2>@ViewData["FanClub"]</h2>

<form asp-action="RegisterModel" method="post">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="AFCNumber"></label>
        <input asp-for="AFCNumber" type="number" class="form-control" />
        <span asp-validation-for="AFCNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
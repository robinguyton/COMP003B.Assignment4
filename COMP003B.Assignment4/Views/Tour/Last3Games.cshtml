@model IEnumerable<COMP003B.Assignment4.Models.ArsenalModel>

@{
    ViewData["Title"] = "Last 3 Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Last 3 Games</h2>



@foreach (var game in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">@game.Title</h4>
            <p class="card-text">@game.Summary</p>
        </div>
    </div>
}


<nav>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Tour" asp-action="Stars">Check out our top performers!</a>
</nav>